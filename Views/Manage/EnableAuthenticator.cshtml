@model BookwormsOnline.ViewModels.EnableAuthenticatorViewModel

<h1>Enable Authenticator</h1>

<div>
    <p>Please enter the code from your authenticator app.</p>
    <p>Shared Key: @Model.SharedKey</p>
    <p>Authenticator Uri: @Model.AuthenticatorUri</p>

    <form asp-controller="Manage" asp-action="EnableAuthenticator" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Verify</button>
    </form>
</div>
