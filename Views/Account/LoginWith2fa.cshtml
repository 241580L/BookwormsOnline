@model BookwormsOnline.ViewModels.LoginWith2faViewModel

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<h1>Two-Factor Authentication</h1>
<hr />
<p>A verification code has been sent to your email address. Please enter it below to complete your login.</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TwoFactorCode"></label>
                <input asp-for="TwoFactorCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMachine">
                        <input asp-for="RememberMachine" />
                        @Html.DisplayNameFor(m => m.RememberMachine)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
        </form>
        <form asp-action="Resend2fa" method="post" class="mt-2">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-link">Resend code</button>
        </form>
    </div>
</div>
