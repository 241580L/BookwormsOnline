@model BookwormsOnline.ViewModels.ResendEmailViewModel

@{
    ViewData["Title"] = "Resend Confirmation";
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

<form asp-action="ResendConfirmation" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Resend confirmation email</button>
</form>

<p class="mt-3"><a asp-action="Login">Back to Login</a></p>
